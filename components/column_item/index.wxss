/* components/column_item/index.wxss */

.course_item {
  width: 100%;
  margin-top: 12px;
}

.course_item_left {
  margin-bottom: 25px;
  position: relative;
  width: 25%;
  float: left;
  height: 80px;
}

.course_cover{
  width: 80px;
  height: 90px;
  border-radius: 5px;
  max-width: 100%;
  position: absolute;
  left: 0px;
   
}

.course_item_right {
  margin-bottom: 25px;
  width: 75%;
  float: left;
  height: 80px;
}

.title {
  text-align: left;
  float: left;
  width: 100%;
  font-size: 13px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.introduction {
  color: rgb(95, 95, 95);
  text-align: left;
  float: left;
  width: 100%;
  font-size: 12px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 2px 0;
  background-color: rgb(247, 247, 247);
  padding-left: 5px;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.level {
  width: 100%;
  text-align: left;
  font-size: 12px;
  color: #292929;
}

.price {
  width: 100%;
  text-align: left;
  font-size: 12px;
  color: #797979;
}