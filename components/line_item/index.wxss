/* components/line_item/index.wxss */

.course_item {
  width: 100%;
  margin-top: 12px;
}

.course_item_left {
  margin-bottom: 25px;
  position: relative;
  width: 35%;
  float: left;
  height: 80px;
}

.course_cover{
  width: 70px;
  height: 70px;
  border-radius: 5px;
  max-width: 90%;
  position: absolute;
  left: 0px;
  top: 10px;
  z-index: 1;   
}

.course_cover1{
  width: 75px;
  height: 75px;
  border-radius: 5px;
  max-width: 90%;
  position: absolute;
  left: 3px;
  top: 5px;
  z-index: 2;
}

.course_cover2{
  width: 80px;
  height: 80px;
  border-radius: 5px;
  max-width: 90%;
  position: absolute;
  left: 6px;
  z-index: 3;
}

.course_item_right {
  margin-bottom: 25px;
  width: 65%;
  float: left;
  height: 80px;
}

.title {
  text-align: left;
  float: left;
  width: 100%;
  font-size: 13px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.introduction {
  color: rgb(95, 95, 95);
  text-align: left;
  float: left;
  width: 100%;
  font-size: 10px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 2px 0;
}

.level {
  width: 100%;
  text-align: left;
  font-size: 12px;
  color: #292929;
}

.price {
  width: 100%;
  text-align: left;
  font-size: 12px;
  color: #797979;
}